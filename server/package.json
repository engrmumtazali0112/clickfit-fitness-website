{
  "name": "clickfit-server",
  "version": "1.0.0",
  "description": "ClickFit Backend Server with Dual Database Support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:mysql": "node server.js",
    "start:turso": "node server.js",
    "dev": "nodemon server.js",
    "dev:mysql": "nodemon server.js",
    "dev:turso": "cross-env DATABASE_TYPE=turso nodemon server.js",
    "dev:win:mysql": "set DATABASE_TYPE=mysql && nodemon server.js",
    "dev:win:turso": "set DATABASE_TYPE=turso && nodemon server.js",
    "test:local": "set DATABASE_TYPE=mysql&&set PORT=3000&&node server.js",
    "test:turso": "set DATABASE_TYPE=turso&&set PORT=3001&&node server.js"
  },
  "dependencies": {
    "@libsql/client": "^0.5.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
